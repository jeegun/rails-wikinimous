<div class="container">
<h2 class="border-bottom">
  <%= @article.title %>
  <br>
  <small>
  <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_article_path(@article) %>
  <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, article_path(@article), method: :delete, data: {confirm: "Delete #{@article.title}?"} %>
  </small>
</h2>
<p><%= @article.content %></p>
</div>
